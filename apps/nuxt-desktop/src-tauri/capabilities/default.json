{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "window:allow-start-dragging",
    "window:allow-close",
    "window:allow-create",
    "webview:allow-create-webview-window",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "tray:allow-new",
    "tray:allow-set-tooltip",
    "tray:allow-set-icon",
    "tray:allow-set-menu",
    "tray:allow-set-title",
    "tray:allow-set-visible",
    "tray:allow-set-show-menu-on-left-click",
    "notification:default",
    "clipboard:monitor-all",
    "clipboard:read-all",
    "clipboard:write-all",
    "fs:default",
    "fs:allow-app-meta",
    "fs:allow-home-read-recursive",
    "shellx:allow-execute",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-confirm",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:default"
  ]
}