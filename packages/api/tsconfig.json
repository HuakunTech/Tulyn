{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "ui",
    "modles"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}