{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "verbatimModuleSyntax": true,
    "rootDir": "./src"
  },
  "include": ["src", "ui", "models", "commands"],
  "exclude": ["dist", "node_modules"]
}
